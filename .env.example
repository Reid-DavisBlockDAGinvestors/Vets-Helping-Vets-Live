# Blockchain / Contract
# Hardhat uses these for BlockDAG testnet deployment
BLOCKDAG_RPC_URL=https://rpc.awakening.bdagscan.com
BLOCKDAG_PRIVATE_KEY=0xYOUR_PRIVATE_KEY
NONPROFIT_ADDRESS=0xYourNonprofitAddress
CONTRACT_ADDRESS=0xYourContractOnBlockDAG

# Storacha (UCAN delegation)
STORACHA_SPACE_DID=did:key:your-space
STORACHA_DELEGATION_CAR_PATH=./delegations/proof.car

# Admin
ADMIN_SECRET=change-me

# Stripe
STRIPE_KEY=sk_live_or_test
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_or_test
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Public base URL (used by webhook to call back into app for receipts)
NEXT_PUBLIC_BASE_URL=http://localhost:3000
# Note: Use test keys (sk_test_*/pk_test_*) in development

# Supabase (optional for off-chain data)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=public-anon-key

# Alternative Payments (optional)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_SECRET=your-paypal-secret
CASHAPP_KEY=your-cashapp-key
VENMO_KEY=your-venmo-key

# BlockDAG Buildathon references (optional)
