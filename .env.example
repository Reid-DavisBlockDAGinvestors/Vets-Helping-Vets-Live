# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================

# BlockDAG (Current Production - V5)
BLOCKDAG_RPC=https://bdag.nownodes.io
NOWNODES_API_KEY=your-nownodes-api-key
BDAG_RELAYER_KEY=0xYOUR_PRIVATE_KEY
V5_CONTRACT_BDAG=0x96bB4d907CC6F90E5677df7ad48Cf3ad12915890

# Ethereum (V7 Deployment)
# Get Alchemy API key from https://www.alchemy.com/
ALCHEMY_API_KEY=your-alchemy-api-key
ETHEREUM_RPC=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
ETHEREUM_SEPOLIA_RPC=https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY
ETH_DEPLOYER_KEY=0xYOUR_DEPLOYER_PRIVATE_KEY

# Contract Verification
# Get from https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your-etherscan-api-key

# Treasury Configuration
# SECURITY: This is where platform fees are sent
TREASURY_WALLET=0x07b3c4BB8842a9eE0698F1A3c6778bcC456d9362

# Fee Configuration (basis points: 100 = 1%)
PLATFORM_FEE_BPS=100
IMMEDIATE_PAYOUT_ENABLED=false

# Gas Settings (Ethereum - prevent runaway costs)
MAX_GAS_PRICE_GWEI=100
GAS_BUFFER_PERCENT=20

# V7 Contract Addresses (set after deployment)
V7_CONTRACT_ETHEREUM=
V7_CONTRACT_SEPOLIA=
V7_CONTRACT_POLYGON=
V7_CONTRACT_BASE=

# Legacy (can be removed)
NONPROFIT_ADDRESS=0xYourNonprofitAddress
CONTRACT_ADDRESS=0x96bB4d907CC6F90E5677df7ad48Cf3ad12915890

# Storacha (UCAN delegation)
STORACHA_SPACE_DID=did:key:your-space
STORACHA_DELEGATION_CAR_PATH=./delegations/proof.car

# Admin
ADMIN_SECRET=change-me

# Stripe
STRIPE_KEY=sk_live_or_test
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_or_test
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Public base URL (used by webhook to call back into app for receipts)
NEXT_PUBLIC_BASE_URL=http://localhost:3000
# Note: Use test keys (sk_test_*/pk_test_*) in development

# Supabase (optional for off-chain data)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=public-anon-key

# Alternative Payments (optional)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_SECRET=your-paypal-secret
CASHAPP_KEY=your-cashapp-key
VENMO_KEY=your-venmo-key

# BlockDAG Buildathon references (optional)
# Faucet: https://awakening.bdagscan.com/faucet
# Explorer: https://awakening.bdagscan.com

# AI (optional)
GROK_API_KEY=your-grok-api-key

# Didit KYC Verification (optional)
# Get these from https://didit.me/dashboard
DIDIT_CLIENT_ID=your-didit-client-id
DIDIT_CLIENT_SECRET=your-didit-client-secret
